/* pages/protocol/protocol */
.container{
  padding-bottom: 35rpx;
  width: 100%;
}
.header{
  height: 128rpx;
  background-color: #E51C23;
  color: #fff;
  display: flex;
  align-items: center;
}

.header cover-image{
  float: left;
  width: 36rpx;
  height: 36rpx;
  margin-left: 26rpx; 
}
.header .name{
  font-size: 36rpx;
  font-weight: 500;
  line-height: 128rpx;
}

/* 内容 */
.content{
  margin: 0 auto;
  width: 689rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #fff;
}
.content .title{
  margin: 55rpx 0 52rpx 0;
  width: 100%;
  text-align: center;
  font-weight: bold;
  font-size: 34rpx;
}
.content .text-indent{
  text-indent: 70rpx;
  text-align: justify;
}
.content .text-title{
  margin-top: 20rpx;
  font-weight: bold;
}
